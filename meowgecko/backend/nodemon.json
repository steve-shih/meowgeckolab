{
    "restartable": "rs",
    "ignore": [".git", ".logs", ".node_modules/**/node_modules","pem"],
    "verbose": true,
    "watch": ["src"],
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "ts js json",
    "exec": "ts-node -r tsconfig-paths/register src/main.ts",
    "swagger": "ts-node -r tsconfig-paths/register src/swagger.ts"
}